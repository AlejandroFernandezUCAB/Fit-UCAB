<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/m05_log_activity_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Activities.M05AddExerciseActivity">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/m05_log_ll_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_m05_type_tag"
            android:layout_width="269dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Activity Type:"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_weight="0.72" />

        <ExpandableListView
            android:id="@+id/lv_m05_acivity_type"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textSize="25sp"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="411dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="70dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="70dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/m05_log_ll_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m05_log_ll_1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tv_m05_start_tag"
            android:layout_width="162dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="Start:"
            android:textSize="25sp"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="162dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="140dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="140dp" />

        <TimePicker
            android:id="@+id/tp_m05_start"
            android:layout_width="248dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:persistentDrawingCache="all"
            android:timePickerMode="spinner"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="248dp"
            tools:layout_conversion_absoluteX="162dp"
            tools:layout_conversion_absoluteY="140dp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="140dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m05_log_ll_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="@+id/m05_log_ll_2"
        app:layout_constraintTop_toBottomOf="@+id/m05_log_ll_2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="12dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp">

        <TextView
            android:id="@+id/tv_m05_calories_tag"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="0.21"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Calories:"
            android:textSize="25sp"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="203dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="210dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="210dp" />


        <EditText
            android:id="@+id/et_m05_calories"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_weight="0.21"
            android:ems="10"
            android:inputType="number"
            android:paddingBottom="10dp"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="123dp"
            tools:layout_conversion_absoluteX="203dp"
            tools:layout_conversion_absoluteY="210dp"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="210dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m05_log_ll_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/m05_log_ll_2"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/m05_log_ll_2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/m05_log_ll_2">


        <TextView
            android:id="@+id/tv_m05_duration_tag"
            android:layout_width="162dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="Duration:"
            android:textSize="25sp"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="162dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="280dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="280dp" />

        <TimePicker
            android:id="@+id/tp_m05_time"
            android:layout_width="248dp"
            android:layout_height="70dp"
            android:persistentDrawingCache="all"
            android:timePickerMode="spinner"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="248dp"
            tools:layout_conversion_absoluteX="162dp"
            tools:layout_conversion_absoluteY="280dp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="280dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m05_log_ll_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m05_log_ll_1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="210dp"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/tv_m05_distance_tag"
            android:layout_width="162dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="Distance:"
            android:textSize="25sp"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="162dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="140dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="140dp" />

        <EditText
            android:id="@+id/et_m05_distance"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:paddingBottom="10dp"
            tools:layout_conversion_absoluteHeight="70dp"
            tools:layout_conversion_absoluteWidth="123dp"
            tools:layout_conversion_absoluteX="203dp"
            tools:layout_conversion_absoluteY="210dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="374dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
