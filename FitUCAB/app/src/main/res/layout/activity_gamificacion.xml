<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FFFFFF">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/user2"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/line"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingTop="5dip"
        android:gravity="center_horizontal"
        android:layout_below="@+id/puntos"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000000"
        />

    <TextView
        android:id="@+id/nombrelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/nivellabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombrelabel"
        android:text="Nivel: "
        android:textColor="#000000"
        android:layout_alignLeft="@+id/nombrelabel"
        android:layout_alignStart="@+id/nombrelabel" />

    <TextView
        android:id="@+id/puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.252 puntos "
        android:textColor="#000000"
        android:layout_below="@+id/nivellabel"
        android:layout_alignLeft="@+id/nivellabel"
        android:layout_alignStart="@+id/nivellabel" />

    <ListView
        android:id="@+id/lista"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#000000"
        android:dividerHeight="2.0dp"
        android:layout_below="@+id/line" />


</RelativeLayout>
