<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Fragments.M10.M10HistoyFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:id="@+id/list_water"
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_weight="0.81">

    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        tools:ignore="ExtraText"
        android:layout_weight="0.34">>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="58dp"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:contentDescription=""
            app:srcCompat="@mipmap/btn_m10_clock"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            app:srcCompat="@mipmap/btn_m10_calendar"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView_history_day"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageButton"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:text="@string/textview_history_day"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_history_week"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/imageButton2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageButton2"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text="@string/textview_history_week"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>
