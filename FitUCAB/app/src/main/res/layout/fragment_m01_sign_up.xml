<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Fragments.M01.M01SignUpFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_collapseMode="none"
    app:layout_collapseParallaxMultiplier="1.0"
    android:weightSum="1">


    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/correo"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/texfield_m01_correo" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/textfield_m01_contrasena"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/correo"
        android:layout_alignStart="@+id/correo"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/btn_m01_aceptar"
        android:layout_alignEnd="@+id/btn_m01_aceptar" />

    <Button
        android:id="@+id/btn_m01_aceptar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#676CFB"
        android:text="Aceptar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/correo"
        android:layout_alignLeft="@+id/correo"
        android:layout_alignStart="@+id/correo" />

</RelativeLayout>
