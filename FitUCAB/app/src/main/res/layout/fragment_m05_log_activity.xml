<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/m05_log_activity_fragment"
    android:background="@color/colorWhiteSmoke"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Activities.M05AddExerciseActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_m05_titulotipo"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="30dp"
        android:fontFamily="sans-serif"
        android:typeface="sans"

        android:text="@string/_tv_m05_type"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/tv_m05_startime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:layout_x="35dp"
        android:layout_y="153dp"

        android:text="@string/_tv_m05_startime"
        android:textSize="20dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/spn_m05_types"
        android:layout_alignLeft="@+id/tv_m05_titulotipo"
        android:layout_alignStart="@+id/tv_m05_titulotipo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="38dp"
        android:layout_y="341dp"
        android:fontFamily="sans-serif"
        android:text="@string/_tv_m05_calories"
        android:textSize="20dp"
        android:typeface="sans"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/tv_m05_duration"
        android:layout_alignStart="@+id/tv_m05_duration"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/tv_m05_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="39dp"
        android:layout_y="256dp"
        android:fontFamily="sans-serif"
        android:text="@string/_tv_m05_duration"
        android:textSize="20dp"
        android:typeface="sans"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_m05_startime"
        android:layout_alignStart="@+id/tv_m05_startime" />

    <Spinner
        android:id="@+id/spn_m05_types"
        android:layout_width="242dp"
        android:layout_height="41dp"
        android:layout_marginTop="30dp"
        android:layout_x="64dp"
        android:layout_y="79dp"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        android:enabled="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:typeface="sans"
        android:layout_below="@+id/tv_m05_titulotipo"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_x="30dp"
        android:layout_y="299dp"
        app:srcCompat="@mipmap/ic_launcher_time"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tv_m05_startime"
        android:layout_toRightOf="@+id/tv_m05_titulotipo"
        android:layout_toEndOf="@+id/tv_m05_titulotipo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_x="194dp"
        android:layout_y="202dp"
        app:srcCompat="@mipmap/ic_launcher_time"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/tv_m05_duration"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_x="31dp"
        android:layout_y="202dp"
        app:srcCompat="@mipmap/ic_launcher_date"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/tv_m05_duration"
        android:layout_alignStart="@+id/tv_m05_duration"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />



    <Button
        android:id="@+id/btn_m05_manualregister"
        android:layout_width="188dp"
        android:layout_height="63dp"
        android:layout_marginBottom="18dp"
        android:layout_x="106dp"
        android:layout_y="456dp"
        android:width="200dp"
        android:background="@color/colorGreenBtn"
        android:backgroundTint="@color/colorGreenBtn"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/_btn_m05_registermanual"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorwhite"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spn_m05_types"
        android:layout_alignRight="@+id/spn_m05_types"
        android:layout_alignTop="@+id/imageView2"
        android:ems="10"
        android:inputType="number"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:ems="10"
        android:inputType="date"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

</RelativeLayout>
