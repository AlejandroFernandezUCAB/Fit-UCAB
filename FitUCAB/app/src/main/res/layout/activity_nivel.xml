<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:name="Fit-UCAB"
    android:weightSum="1"
    android:id="@+id/main">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/user2"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tv_nombreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Nombre: "
        android:textColor="#353535"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_nivelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_nombreLabel"
        android:layout_alignStart="@+id/tv_nombreLabel"
        android:layout_below="@+id/tv_nombreLabel"
        android:layout_gravity="center"
        android:text="Nivel: "
        android:textColor="#353535"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_nivelLabel"
        android:layout_alignStart="@+id/tv_nivelLabel"
        android:layout_below="@+id/tv_nivelLabel"
        android:layout_gravity="center"
        android:text="3.252 puntos "
        android:textColor="#353535"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/line"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/lista"
        android:layout_below="@+id/tv_puntos"
        android:background="#000000"
        android:paddingTop="5dip" />


    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PieChartId"
        >
    </com.github.mikephil.charting.charts.PieChart>

    <LinearLayout
        android:id="@+id/gamificacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    </LinearLayout>


</LinearLayout>
