<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Activities.M04ActivityNotification">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="322dp"
        android:layout_height="33dp"
        android:layout_below="@+id/appBarLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:checked="false"
        android:text="@string/amigo"
        android:textOff="@string/NO"
        android:textOn="@string/SI"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="322dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/switch3"
        android:layout_alignStart="@+id/switch3"
        android:layout_below="@+id/switch1"
        android:text="@string/actividad"
        android:textOff="@string/NO"
        android:textOn="@string/SI"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="57dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="322dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/switch4"
        android:layout_alignStart="@+id/switch4"
        android:layout_below="@+id/switch2"
        android:text="@string/entrenamiento"
        android:textOff="@string/NO"
        android:textOn="@string/SI"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="103dp" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="322dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/switch5"
        android:layout_alignStart="@+id/switch5"
        android:layout_below="@+id/switch3"
        android:text="@string/reto"
        android:textOff="@string/NO"
        android:textOn="@string/SI"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="146dp" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="322dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/switch6"
        android:layout_alignStart="@+id/switch6"
        android:layout_below="@+id/switch4"
        android:text="@string/hidratacion"
        android:textOff="@string/NO"
        android:textOn="@string/SI"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="192dp" />

    <Switch
        android:id="@+id/switch6"
        android:layout_width="322dp"
        android:layout_height="33dp"
        android:layout_below="@+id/switch5"
        android:layout_centerHorizontal="true"
        android:text="@string/calorias"
        android:textOff="@string/NO"
        android:textOn="@string/SI"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="239dp" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="322dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/switch6"
        android:layout_alignStart="@+id/switch6"
        android:layout_below="@+id/switch6"
        android:checked="false"
        android:text="@string/gamificacion"
        android:textOff="@string/NO"
        android:textOn="@string/SI"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="290dp" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="parent">

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_guardacambios"
        android:layout_alignLeft="@+id/switch7"
        android:layout_alignStart="@+id/switch7"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:contentDescription="prueba para enviar correo"
        android:text="@string/enviar"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="337dp" />

    <Button
        android:id="@+id/idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/enviar"
        android:layout_alignBottom="@+id/enviar"
        android:layout_alignEnd="@+id/switch7"
        android:layout_alignRight="@+id/switch7"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="@string/lang_btn" />

    <Button
        android:id="@+id/button_guardacambios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/idioma"
        android:layout_toStartOf="@+id/idioma"
        android:contentDescription="guardar cambios"
        android:text="@string/guardar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enviar"
        android:layout_alignLeft="@+id/enviar"
        android:layout_alignStart="@+id/enviar"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/idioma"
        android:layout_alignBottom="@+id/idioma"
        android:layout_toLeftOf="@+id/button_guardacambios"
        android:layout_toStartOf="@+id/button_guardacambios"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignLeft="@+id/enviar"
        android:layout_alignStart="@+id/enviar"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="Rango de cercania" />

</RelativeLayout>
