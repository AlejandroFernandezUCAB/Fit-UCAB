<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout4">

    <android.support.v7.widget.Toolbar
        android:id="@+id/m06_toolbar_training_1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:title="@string/M06_nombre_modulo"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />
    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/m06_botonEntrenamientoPersonalizado"
        android:layout_width="183dp"
        android:layout_height="150dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:background="@mipmap/entrenamientopersonalizado"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/m06_botonEntrenamientoPredefinido"
        android:layout_width="183dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/m06_botonEntrenamientoPersonalizado"
        android:layout_toRightOf="@+id/m06_botonEntrenamientoPersonalizado"
        android:background="@mipmap/entrenamientopredefinido"
        android:textAllCaps="false"
        android:layout_marginRight="18dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/m06_botonEntrenamientoPersonalizado"
        android:layout_alignStart="@+id/m06_botonEntrenamientoPersonalizado"
        android:layout_below="@+id/m06_botonEntrenamientoPersonalizado"
        android:layout_toLeftOf="@+id/m06_botonEntrenamientoPredefinido"
        android:layout_toStartOf="@+id/m06_botonEntrenamientoPredefinido"
        android:text="@string/M06_personalizado"
        android:textAlignment="center"
        android:textColor="@color/M06_negroDiseño" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/m06_botonEntrenamientoPredefinido"
        android:layout_alignRight="@+id/m06_botonEntrenamientoPredefinido"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="@string/M06_predefinido"
        android:textAlignment="center"
        android:textColor="@color/M06_negroDiseño" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/M06_title_seleccionar_entrenamiento"
        android:textColor="@color/M06_negroDiseño"
        android:textSize="20dp" />
</RelativeLayout>