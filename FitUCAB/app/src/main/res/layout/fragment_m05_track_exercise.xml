<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhiteSmoke"
    android:id="@+id/m05_track_activity_fragment">

    <Button
        android:id="@+id/bt_m05_start_tracking"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorwhite"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:background="@color/colorBtnConfirmar"
        android:gravity="center"
        android:text="@string/_bt_start_tracking"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="427dp"
        android:background="@color/colorWhiteSmoke"
        tools:context="com.fitucab.ds1617b.fitucab.UI.Activities.M05TrackExerciseActivity" />

    <ExpandableListView
        android:layout_marginBottom="300dp"
        android:id="@+id/lv_m05_track_type"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />


</android.support.design.widget.CoordinatorLayout>