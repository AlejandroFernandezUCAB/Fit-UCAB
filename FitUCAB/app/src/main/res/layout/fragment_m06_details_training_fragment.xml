<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout4">

        <android.support.v7.widget.Toolbar
            android:id="@+id/m06_toolbar_training_5"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:title="@string/M06_nombre_modulo"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/m06_nombre_entrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="@string/M06_nombreEntrenamiento"
        android:layout_below="@+id/appBarLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/m06_nombreEntrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/m06_nombre_entrenamiento"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Entrenamiento CAF 2018"
        android:focusable="false"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/m06_actividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="@string/M06_actividad"
        android:layout_below="@+id/m06_nombreEntrenamiento"
        android:layout_alignLeft="@+id/m06_nombreEntrenamiento"
        android:layout_alignStart="@+id/m06_nombreEntrenamiento" />

    <ListView
        android:id="@+id/m06_ListViewActividades"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/m06_nombreEntrenamiento"
        android:layout_alignLeft="@+id/m06_actividades"
        android:layout_alignRight="@+id/m06_nombreEntrenamiento"
        android:layout_alignStart="@+id/m06_actividades"
        android:layout_below="@+id/m06_actividades"
        android:layout_marginBottom="200dp" />

    <Button
        android:id="@+id/m06_botonCompartirEntrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:background="@color/colorBtnAceptar"
        android:text="@string/M06_compartir"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>