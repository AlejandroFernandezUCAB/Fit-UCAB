<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/i_copa"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/copa"
        android:layout_alignBottom="@+id/tv_descripcion" />

    <TextView
        android:id="@+id/tv_logroLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/i_copa"
        android:paddingTop="6dp"
        android:text="Logro: "
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_logro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="logro"
        android:layout_alignBaseline="@+id/tv_logroLabel"
        android:layout_alignBottom="@+id/tv_logroLabel"
        android:layout_toRightOf="@+id/tv_logroLabel"
        android:layout_toEndOf="@+id/tv_logroLabel" />

    <TextView
        android:id="@+id/tv_recompensaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_recompensa"
        android:layout_alignBottom="@+id/tv_recompensa"
        android:layout_toLeftOf="@+id/tv_recompensa"
        android:layout_toStartOf="@+id/tv_recompensa"
        android:paddingTop="6dp"
        android:text="Recompensa: "
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_recompensa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="logro"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/i_copa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_logroLabel"
        android:layout_toEndOf="@+id/i_copa"
        android:layout_toRightOf="@+id/i_copa"
        android:fontFamily="monospace"
        android:paddingTop="6dp"
        android:text="Descripcion:"
        android:textColor="#353535"
        android:textSize="18dp"
        android:textStyle="italic" />



</RelativeLayout>