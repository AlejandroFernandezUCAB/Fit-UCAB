<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--Esto es un ejemplo modulo 09-->
    <appender name="M09Debug" class="ch.qos.logback.core.FileAppender">
        <file>/home/david/Programs/Fit-UCAB/fitucab_maven/src/main/java/edu/ucab/desarrollo/fitucab/resource/M09.deb</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{50} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="M09Error" class="ch.qos.logback.core.FileAppender">
        <file>/home/david/Programs/Fit-UCAB/fitucab_maven/src/main/java/edu/ucab/desarrollo/fitucab/resource/M09.err</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{50} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="edu.ucab.desarrollo.fitucab.webService" additivity="false" level="debug">
        <appender-ref ref="M09Debug" />
    </logger>

    <logger name="edu.ucab.desarrollo.fitucab.webService" additivity="false" level="error">
        <appender-ref ref="M09Error" />
    </logger>

    <!--Fin del ejemplo modulo 09-->
</configuration>

